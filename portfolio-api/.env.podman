# Copy to .env.podman and fill values. Used by compose for API + DB.
# Do not commit .env.podman with real secrets.

# Database (must match db service in compose)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=personal_portfolio
DB_USERNAME=portfolio
DB_PASSWORD=portfolio_pass

# MySQL root (for db container)
MYSQL_ROOT_PASSWORD=secret

# Lumen
APP_NAME=Lumen
APP_ENV=production
APP_KEY=base64:YourGeneratedKeyHere
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# Optional: frontend build-time API URL (empty = relative /api via nginx proxy)
# VITE_API_URL=
