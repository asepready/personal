APP_NAME=Lumen Portfolio API
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Jakarta
# Production: set APP_DEBUG=false and generate a valid APP_KEY

LOG_CHANNEL=stack
LOG_SLACK_WEBHOOK_URL=

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=personal_portfolio
DB_USERNAME=root
DB_PASSWORD=

CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# User ID that receives public contact form submissions (POST /api/contact). If empty, first user is used.
CONTACT_OWNER_USER_ID=1

# Allowed CORS origins (comma-separated). Use * to allow any origin (dev only).
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limit: max requests per minute per IP (general API and contact form uses 5/min)
THROTTLE_MAX_ATTEMPTS=60
THROTTLE_DECAY_MINUTES=1
