# Web (Vue + nginx) â€” frontend microservice, proxy ke API
# Build: podman build -t personal-web -f web/Containerfile web/
FROM node:20-alpine AS builder
WORKDIR /app

# npm install lebih toleran di container (Windows/Podman) daripada npm ci
COPY package.json package-lock.json ./
RUN npm install

COPY . .
# Build tanpa VITE_API_URL = same-origin; nginx akan proxy /api, /login, /admin ke backend
RUN npm run build

# Runtime: nginx
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
